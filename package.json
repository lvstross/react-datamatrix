{
  "name": "react-datamatrix-svg",
  "description": "React component wrapper for github datamatrix js",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Levi Gonzales"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "private": false,
  "main": "./dist/react-datamatrix.umd.js",
  "module": "./dist/react-datamatrix.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-datamatrix.es.js",
      "require": "./dist/react-datamatrix.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview",
    "gen:ts:d": "cd .src/lib && tsc DataMatrix.tsx --declaration --emitDeclarationOnly"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-test-renderer": "^18.0.0",
    "@vitejs/plugin-react": "^2.2.0",
    "c8": "^7.12.0",
    "eslint": "^8.27.0",
    "eslint-plugin-react": "^7.31.10",
    "jsdom": "^20.0.2",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  }
}
